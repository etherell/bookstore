%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('.title')
  = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form' } do |f|
    .form-group.mb-30
      = f.label :email, t('.email'), class: 'control-label input-label'
      = f.input_field :email, autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: t('.email')
      = f.error :email, class: 'text-danger'
    .form-group.mb-30
      = f.label :password, t('.password'), class: 'control-label input-label'
      = f.input_field :password, autocomplete: "new-password", id: 'password', class: 'form-control', placeholder: t('.password')
      = f.full_error :password, class: 'text-danger'
    .form-group.mb-30
      = f.label :password_confirmation, t('.confirmation'), class: 'control-label input-label'
      = f.input_field :password_confirmation, autocomplete: "new-password", id: 'confirm', class: 'form-control', placeholder: t('.confirmation')
      = f.full_error :password_confirmation, class: 'text-danger'
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        %input.checkbox-input{type: "checkbox", hidden: "true", name: "user[remember_me]", id: "user_remember_me"}
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text= t('.remember_me')
    .text-center
      = f.submit t('.sign_up'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('.have_account')
    = link_to t('.log_in'), new_user_session_path, class: 'in-gold-500'
