%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('.log_in')
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon', method: :post do
      %i.fa.fa-facebook-official
    %p.general-login-text= t('.or')
  = simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'general-form' } do |f|
    .form-group.mb-30
      = f.label :email, t('.password'), class: 'control-label input-label'
      = f.input_field :email, autofocus: true, autocomplete: "email", id: 'email', class: 'form-control', placeholder: t('.email')
      = f.full_error :email, class: 'text-danger'
    .form-group.mb-30
      = f.label :password, t('.password'), class: 'control-label input-label'
      = f.input_field :password, autocomplete: "current-password", id: 'password', class: 'form-control', placeholder: t('.password')
      = f.full_error :password, class: 'text-danger'
      = link_to t('.forgot_password'), new_user_password_path, class: 'help-block in-gold-500'
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        %input.checkbox-input{type: "checkbox", hidden: "true", name: "user[remember_me]", id: "user_remember_me"}
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text= t('.remember_me')
    .text-center
      = f.submit t('.log_in'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('.dont_have_account')
    = link_to t('.sign_up'), new_user_registration_path, class: 'in-gold-500'
