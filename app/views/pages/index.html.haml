%main.container
  .carousel.slide#slider{ 'data-ride': 'carousel' }
    %ol.carousel-indicators
      %li.active{ 'data-target': '#slider', 'data-slide-to': '0' }
      %li{ 'data-target': '#slider', 'data-slide-to': '1' }
    .carousel-inner{ role: 'listbox' }
      .item.active
        .row
          .col-sm-5
            .general-img-wrap
              = image_pack_tag 'book.jpg', class: 'img-shadow.general-thumbnail-img', alt: 'design-book'
          .col-sm-7
            .mb-60
              %h1 Real-Life Responsive Web Design
              %p.lead Smart front-end techniques and design patterns derived from real-life responsive projects
              %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
              .general-align
                %button.disabled.btn= t('.buy_now')
      .item
        .row
          .col-sm-5
            .general-img-wrap
              = image_pack_tag 'book.jpg', class: 'img-shadow.general-thumbnail-img', alt: 'design-book'
          .col-sm-7
            .mb-60
              %h1 Real-Life Responsive Web Design
              %p.lead Smart front-end techniques and design patterns
              %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
              .general-align
                %button.btn.btn-primary= t('.buy_now')
    %a.left.carousel-control{ href: '#slider', role: 'button', 'data-slide': 'prev' }
      %span.icon-prev{ 'aria-hidden': 'true' }
      %span.sr-only Previous
    %a.right.carousel-control{ href: '#slider', role: 'button', 'data-slide': 'next' }
      %span.icon-next{ 'aria-hidden': 'true' }
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1.welcome-text= t('.welcome')
    .mb-res-50
      %p.description-text= t('.description')
    %button.btn.btn-default.get-started-btn= t('.get_started')
  = render 'best_sellers'
