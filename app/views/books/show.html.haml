%main.container
  = link_to back_to_results_link(request.referer), class: 'general-back-link' do
    %i.fa.fa-long-arrow-left.mr-15
    = t('.back_to_results')
  .row.book-container
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{ src: 'https://www.bramstein.com/static/smashing-@book-5-photo-stack.9d5d114e3e.jpg' }
        .images.clearfix
          %a.img-link{ href: '#' }
            %img{ src: 'https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-@book-5-2-large.jpg' }
          %a.img-link{ href: '#' }
            %img{ src: 'https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-@book-5-2-large.jpg' }
          %a.img-link{ href: '#' }
            %img{ src: 'https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-@book-5-2-large.jpg' }
    .col-sm-6
      %h1.mt-res-0.title-value= @book.title
      %p.lead.small.authors-value= @book.authors_names
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10.book-price.price-value= @book.price.format
        .col-xs-5.col-md-3
          .input-group.general-position
            = link_to '#', remote: true, class: 'input-link minus-quantity' do
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{ type: 'text', value: 1 }
            = link_to '#', remote: true, class: 'input-link plus-quantity' do
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position.cart-btn= t('.add_to_cart')
      .general-info-wrap.divider-lg
        %p= t('.description')
        .lead.small.line-height-2.description-value
          = @book.short_description
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left= t('.publication_year')
          %p.lead.small.pull-right.publication-year-value= @book.publication_year
      - if @book.dimensions?
        .general-info-wrap.divider-lg
          .clearfix
            %p.pull-left= t('.dimensions_title')
            %p.lead.small.pull-right.dimesions-value= @book.dimensions
      - if @book.materials.any?
        .general-info-wrap.divider-lg
          .clearfix
            %p.pull-left= t('.materials')
            %p.lead.small.pull-right.materials-value= @book.meterials_names
  .mb-80
    %h3 Write a Review
    %p.general-info-text Score
    .mb-15
      %i.fa.fa-star.rate-empty
      %i.fa.fa-star.rate-empty
      %i.fa.fa-star.rate-empty
      %i.fa.fa-star.rate-empty
      %i.fa.fa-star.rate-empty
    %form.row
      .col-md-8
        .mb-40
          .form-group
            %label.control-label.input-label.in-grey-600{ for: 'title' } Title
            %input.form-control#title{ name: 'title', type: 'text' }
          .form-group
            %label.control-label.input-label.in-grey-600{ for: 'review' } Review
            %textarea.form-control#review{ name: 'review', type: 'text' }
        .text-right
          %button.btn.disabled.mb-20 Post
  = render 'reviews'

= javascript_pack_tag 'books/price-calculator'
= javascript_pack_tag 'books/more-shower'


