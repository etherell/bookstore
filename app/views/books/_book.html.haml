.book-container.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = image_tag book.available_image, class: 'img-shadow general-thumbnail-img', alt: 'design-book'
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(book), class: 'thumb-hover-link show-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          %a.buy-link.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title= book.short_title
    %p.font-16.in-gold-500.price= book.price.format
    - if book.authors.present?
      %span.divider-sm
      %p.lead.small.authors= book.authors_names
