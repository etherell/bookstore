%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = t("books.index.sorting.#{params[:sorting] || 'newest'}")
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li
    = link_to t('books.index.sorting.newest'), request.params.merge(sorting: Books::SortingQuery::NEWEST)
  %li
    = link_to t('books.index.sorting.popular'), request.params.merge(sorting: Books::SortingQuery::POPULAR)
  %li
    = link_to t('books.index.sorting.low_price'), request.params.merge(sorting: Books::SortingQuery::LOW_PRICE)
  %li
    = link_to t('books.index.sorting.high_price'), request.params.merge(sorting: Books::SortingQuery::HIGH_PRICE)
