%main.container
  = render 'partials/settings_menu'
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t('.billing_title')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t('.shipping_title')
      .row
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('.billing_title')
          = render 'form', form_object: @billing_form
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t('.shipping_title')
          = render 'form', form_object: @shipping_form

